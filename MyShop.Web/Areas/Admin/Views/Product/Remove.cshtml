@using MyShop.Entities.ViewModels
@model Product
@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

<h2>Create Product</h2>

<form method="post" asp-action="RemoveProduct" asp-controller="Product" enctype="multipart/form-data">

    <input hidden asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input disabled asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea disabled asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input disabled asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Category</label>
        <input disabled asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="control-label">Product Image</label>
        <input disabled asp-for="Image" type="file" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger">Remove</button>
    <a asp-action="index" asp-controller="Product" class="btn btn-secondary"> Back To Home </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
