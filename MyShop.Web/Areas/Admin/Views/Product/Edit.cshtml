@using MyShop.Entities.ViewModels
@model ProductViewModel
@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

<h2>Create Product</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Edit" asp-controller="Product" enctype="multipart/form-data">

            <input hidden asp-for="Product.Id" />

            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label">Category</label>
                <select asp-for="Product.CategoryId" class="form-control" asp-items="Model.CategoryList"></select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Image" class="control-label">Product Image</label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Product.Image" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Edit</button>
            <a asp-action="index" asp-controller="Product" class="btn btn-secondary"> Back To Home </a>
        </form>
    </div>
    <div class="col-md-6">
        <div class="container">
            <img src="~/Images/Products/@Model.Product.Image" width="450" height="450" class="overflow-hidden" style="margin-left:200px" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
