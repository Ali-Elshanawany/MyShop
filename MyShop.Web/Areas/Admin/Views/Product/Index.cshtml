@model IEnumerable<Product>

@{

    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "View Products";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

<h3> Products List</h3>

<partial name="_SweetAlertView" />

<table class="table table-hover" width="100%">
    <tr>

        <td>Name</td>
        <td>Description</td>
        <td>Price</td>
        <td>Category</td>
        <td>Image</td>
        <td>Actions</td>
    </tr>
    @foreach (Product product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td>@product.Category.Name</td>
            <td><img src="/Images/Products/@product.Image" style="height: 100px; width: 100px;" /></td>
            <td>
                <a href="Product/Edit/@product.Id" class="btn btn-primary ">Edit</a>
                <a asp-action="Remove" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>

                @* <a asp-action="Delete" asp-controller="Category" class="btn-danger">Delete</a> *@
            </td>
        </tr>
    }


</table>

<div class="mb-3 ">
    <a asp-action="Create" asp-controller="Product" class="btn btn-primary "> Add New Record </a>
</div>