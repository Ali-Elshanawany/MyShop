@model IEnumerable<Category>

@{

    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "View Category";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

<h3> Categories List</h3>

<partial name="_SweetAlertView" />

<table class="table table-hover" width="100%">
    <tr>

        <td>Name</td>
        <td>Description</td>
        <td>Created At</td>
        <td>Actions</td>
    </tr>
    @foreach (Category category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>@category.CreatedTime</td>
            <td>
                <a href="Category/Edit/@category.Id" class="btn btn-primary ">Edit</a>
                <a asp-action="Remove" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>

                @* <a asp-action="Delete" asp-controller="Category" class="btn-danger">Delete</a> *@
            </td>
        </tr>
    }


</table>

<div class="mb-3 ">
    <a asp-action="Create" asp-controller="Category" class="btn btn-primary "> Add New Record </a>
</div>